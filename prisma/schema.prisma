generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Server {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  version      String
  maxPlayers   Int
  gameMode     GameMode?
  difficulty   Difficulty?
  hardcore     Boolean?
  allowPvp     Boolean?
  allowNether  Boolean?
  onlineMode   Boolean?
  motd         String?
  ipAddress    String
  port         Int
  status       ServerStatus
  containerId  String?
  ownerGuildId String
  ops          Operator[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Operator {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  level     Int
  createdAt DateTime @default(now())
  serverId  String   @db.ObjectId
  server    Server   @relation(fields: [serverId], references: [id])
}

enum GameMode {
  survival
  creative
  adventure
  spectator
}

enum Difficulty {
  peaceful
  easy
  normal
  hard
}

enum ServerStatus {
  ativo
  inativo
  parado
}
