generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Server {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   // Nome do servidor (definido pelo usuário)
  ipAddress     String   // Endereço IP do contêiner do servidor
  port          Int      // Porta do servidor (normalmente 25565)
  version       String   // Versão do Minecraft
  status        String   // Status do servidor (ativo, inativo, em criação, etc.)
  createdAt     DateTime @default(now()) // Data de criação do servidor
  updatedAt     DateTime @updatedAt      // Data da última atualização
  ownerGuildId  String   // Guild ID do Discord (servidor que criou)
  containerId   String?  // ID do contêiner Docker (para controle)
  maxPlayers    Int      // Número máximo de jogadores
  description   String?  // Descrição do servidor (opcional)
  ops            Operator[]
}

model Operator {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  level     Int
  createdAt DateTime @default(now()) 
  serverId  String   @db.ObjectId
  server    Server   @relation(fields: [serverId], references: [id])
}
